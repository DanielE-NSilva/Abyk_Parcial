
<%- include('partials/_header') -%>
<body>       
    <main>

        <!-- slider Area Start -->
        <div class="slider-area">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="../public/assets/img/categori/cat1.jpg" class="d-block w-100" alt="..." height="400px">
                  </div>
                  <div class="carousel-item">
                    <img src="../public/assets/img/categori/cat2.jpg" class="d-block w-100" alt="..." height="300px">
                  </div>
                  <div class="carousel-item">
                    <img src="../public/assets/img/categori/cat3.jpg" class="d-block w-100" alt="..." height="300px">
                  </div>
                </div>
